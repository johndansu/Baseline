# Baseline API environment template for production deployment.
# Copy values into your runtime secret store or deployment environment.

# Core API service settings.
BASELINE_API_ADDR=:8080
BASELINE_API_DB_PATH=baseline_api.db
BASELINE_API_TIMEOUT_MS=5000
BASELINE_API_MAX_BODY_BYTES=1048576
BASELINE_API_SHUTDOWN_TIMEOUT_MS=10000

# API auth bootstrap (set only for initial startup).
# Prefer BASELINE_API_KEYS for multiple bootstrapped keys.
BASELINE_API_KEY=replace-with-bootstrap-admin-key
BASELINE_API_ROLE=admin
# BASELINE_API_KEYS=admin-key:admin,viewer-key:viewer
# Secret used for API key hash-at-rest (keep stable across replicas).
BASELINE_API_KEY_HASH_SECRET=replace-with-strong-random-secret

# Self-service API key registration.
BASELINE_API_SELF_SERVICE_ENABLED=false
# BASELINE_API_ENROLLMENT_TOKENS=onetime-token:viewer
BASELINE_API_ENROLLMENT_TOKEN_TTL_MINUTES=1440
BASELINE_API_ENROLLMENT_TOKEN_MAX_USES=1

# Optional runtime controls.
BASELINE_API_AI_ENABLED=false
# BASELINE_API_CORS_ALLOWED_ORIGINS=https://dashboard.example.com
BASELINE_API_TRUST_PROXY_HEADERS=false
BASELINE_API_RATE_LIMIT_ENABLED=true
BASELINE_API_RATE_LIMIT_REQUESTS=120
BASELINE_API_RATE_LIMIT_WINDOW_SECONDS=60
BASELINE_API_AUTH_RATE_LIMIT_REQUESTS=20
BASELINE_API_AUTH_RATE_LIMIT_WINDOW_SECONDS=60
BASELINE_API_UNAUTH_RATE_LIMIT_REQUESTS=30
BASELINE_API_UNAUTH_RATE_LIMIT_WINDOW_SECONDS=60

# CLI AI scaffolding provider settings (baseline generate / baseline pr).
# AI_PROVIDER=ollama
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=tinyllama:latest
# AI_PROVIDER=openrouter
# OPENROUTER_API_KEY=replace-with-openrouter-api-key
# OPENROUTER_MODEL=openai/gpt-4o-mini
# OPENROUTER_URL=https://openrouter.ai/api/v1
